extends layout

block content
	.login-content
		// Login
		#l-login.lc-block.toggled
			.lcb-form
				img(src='/images/logo.jpg', alt='Logo egresados', height='50', width='120')
				form(name='loginForm')
					.input-group.m-b-20
						span.input-group-addon
							i.zmdi.zmdi-account
						.fg-line
							input#user.form-control(type='text', placeholder='Usuario', required)
					.input-group.m-b-20
						span.input-group-addon
							i.zmdi.zmdi-male
						.fg-line
							input#password.form-control(type='password', placeholder='Contrase√±a', required)
					button#submit.btn.btn-login.btn-danger.btn-float(type='button')
						i.zmdi.zmdi-arrow-forward
				small
					.row
						.col-md-12
							h5
								a(href='/business/add/' target='_blank') Registrar establecimiento.
			.lcb-navigation
				#alert
	include footer
	script(src='/javascripts/js/login_controller.js')
